{
  "compilerOptions": {
    "outDir": "./dist/",
    "removeComments": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "jsx": "react",
    "lib": [
      "dom",
      "es6",
      "es7",
      "es2015"
    ],
  },
  "exclude": [
    "node_modules",
    "dist",
    "test"
  ],
  "include": [
    "./packages/**/src/*"
  ]
}
